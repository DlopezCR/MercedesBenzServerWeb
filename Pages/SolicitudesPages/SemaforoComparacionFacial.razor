<div id="idSemaforoComparacionFacial" style="padding: 20px;">

    <div class="mbz-font-STextOffice-B-16 mbz-text-dark pt-2 pb-2">
        @if (string.IsNullOrEmpty(@Model.Resultado.Mensaje))
        {
            <span>Verificación facial pendiente</span>
        }
        else
        {
            <span>@Model.Resultado.Mensaje</span>
        }
    </div>

    <div class="mbz-card-ficha-carnet mb-4">
        <div class="d-flex">
            <div class="mbz-w-50p">
                <p class="text-center">
                    @if (Model.Fotos != null)
                    {
                        @foreach (var item in @Model.Fotos)
                        {
                            if (item.FotoOrigenId == 1)
                            {
                                <img src="data:image/jpg;base64,@Convert.ToBase64String(item.Imagen)" style="max-width: 420px; max-height: 320px;" />
                            }
                        }
                    }
                </p>
            </div>
            <div class="mbz-w-50p">
                <p class="text-center">
                    @if (Model.Fotos != null)
                    {
                        @foreach (var item in @Model.Fotos)
                        {
                            if (item.FotoOrigenId == 2)
                            {
                                <img src="data:image/jpg;base64,@Convert.ToBase64String(item.Imagen)" style="max-width: 420px; max-height: 320px;" />
                            }
                        }
                    }
                </p>
            </div>
        </div>
    </div>

</div>

@code {
    [Parameter] public SolicitudComparacionFacial Model { get; set; }
}
